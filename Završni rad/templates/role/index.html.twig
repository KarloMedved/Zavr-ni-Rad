{% extends 'base.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}

    <div class="relative overflow-x-auto">

        <table class="relative overflow-x-auto">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">Id</th>
                <th scope="col" class="px-6 py-3">Role name</th>
                <th scope="col" class="px-6 py-3">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for role in roles %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <a href="{{ path('app_role_show', {'id': role.id}) }}">{{ role.id }}</a>
                    </td>
                    <td class="px-6 py-4 font-medium text-gray-900"
                        style="word-break: break-word">{{ role.name }}</td>
                    <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <button class="btn text-white bg-yellow-500 hover:bg-yellow-700 focus:ring-4 focus:outline-none
            focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600
            dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            <a href="{{ path('app_role_edit', {'id': role.id}) }}">Edit</a>
                            <button style="padding: 0.2rem">{{ include('role/_delete_form.html.twig') }}</button>
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No roles found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div style="margin: 1rem">
        <button class="btn text-white bg-green-500 hover:bg-green-700 focus:ring-4 focus:outline-none
            focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600
            dark:hover:bg-primary-700 dark:focus:ring-primary-800">
            <a href="{{ path('app_role_new') }}">Create new</a></button>
    </div>

{% endblock %}
